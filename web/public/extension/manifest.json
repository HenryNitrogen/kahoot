{
    "manifest_version": 3,
    "name": "Kahoot智能助手",
    "version": "1.0.0",
    "description": "AI驱动的Kahoot答题助手，提供智能答案推荐",
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "https://kahoot.it/*",
        "http://localhost:3001/*",
        "https://api.henryni.cn/*"
    ],
    "content_scripts": [{
        "matches": ["https://kahoot.it/*"],
        "js": ["content.js"],
        "world": "MAIN"
    }],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Kahoot智能助手"
    }
}